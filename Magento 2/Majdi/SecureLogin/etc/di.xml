<?xml version="1.0"?>
<!-- I wrote this file to configure dependency injection for the module -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\Action\Context">
        <arguments>
            <argument name="securityHelper" xsi:type="object">Majdi\SecureLogin\Helper\Data</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Event\Manager">
        <arguments>
            <argument name="observers" xsi:type="array">
                <item name="login_success" xsi:type="string">Majdi\SecureLogin\Observer\LoginObserver</item>
            </argument>
        </arguments>
    </type>
</config>
